# File Upload
MAX_FILE_SIZE=500 # in MB
UPLOAD_DIR=uploads

# Processing Defaults
DEFAULT_MODE=ollama  # Opciones disponibles: ollama, ocr, openai
DEFAULT_PARALLEL=false 