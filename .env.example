# Server Configuration
PORT=3080

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2-vision  # Opciones disponibles: llama3.2-vision, llava

# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini  # Opciones disponibles: gpt-4o-mini (por defecto), gpt-4o
OPENAI_MAX_TOKENS=4096

# OCR Configuration
OCR_LANGUAGE=spa
OCR_PSM_MODE=6  # PSM.SINGLE_BLOCK

# PDF Processing
PDF_DENSITY=300
PDF_IMAGE_WIDTH=2048
PDF_IMAGE_HEIGHT=2048
